<?xml version="1.0" encoding="UTF-8"?>
<component name="Menu" extends="Group">
    <script type="text/brightscript" uri="Menu.brs" />
    <interface>
        <field id = "width" type = "float" value = "0" onChange = "setWidth" alwaysNotify = "true"/>
        <field id = "height" type = "float" value = "0" onChange = "setHeight" alwaysNotify = "true"/>
        <field id = "color" type = "color" value = "#000000" onChange = "setColor" alwaysNotify = "true"/>
        <field id = "content" type = "roArray" value = "[]" onChange = "setContent" alwaysNotify="true"/>
