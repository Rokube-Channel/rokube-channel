        <field id = "blendColor" type = "color" value = "#ffffff" onChange = "setOptionColor" alwaysNotify="true"/>
        <field id = "textColor" type = "color" value = "#ffffff" onChange = "setOptionColor" alwaysNotify="true"/>
        <field id = "focusBlendColor" type = "color" value = "#ffffff" onChange = "setOptionColor" alwaysNotify="true"/>
        <field id = "focusTextColor" type = "color" value = "#ffffff" onChange = "setOptionColor" alwaysNotify="true"/>
    </interface>
    <children>
        <Rectangle id = "container"
            width = "0"/>
        <MarkupList id = "options"
            itemSpacing = "[0,10]" 
            drawFocusFeedback = "false"
            itemComponentName = "Options"/>
    </children>
